<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InventoryControlMobile.LoginPage"
             BackgroundColor="#112B47">
    <ContentPage.Content>
        <StackLayout Padding="40" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
            <Entry x:Name="TextUsername" Placeholder="Username" TextColor="Beige" PlaceholderColor="Gray"></Entry>
            <Entry x:Name="TextPassword"  Placeholder="Password" IsPassword="True" TextColor="Beige" PlaceholderColor="Gray"></Entry>
            <Button
                VerticalOptions="Center"
                Text="Login"
                TextColor="White"
                BackgroundColor="Transparent"
                BorderColor="ForestGreen"
                BorderWidth="1.5"
                CornerRadius="50"
                Clicked="Button_OnClicked"
            ></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>